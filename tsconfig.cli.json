{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/commands/**/*",
    "src/phases/**/*",
    "src/services/**/*",
    "src/types/**/*",
    "src/utils/**/*",
    "src/config/**/*",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "src/app/**/*",
    "src/pages/**/*",
    "src/components/**/*",
    "src/hooks/**/*",
    "src/store/**/*",
    "src/lib/**/*",
    "src/middleware.ts"
  ]
}